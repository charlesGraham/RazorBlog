@page
@model RazorBlog.Pages.Admin.Blogs.Add
@{
    ViewData["Title"] = "Add Blog Post";
}



<div class="bg-secondary bg-opacity-10 py-2 mb-5" aria-labelledby="navbarDropdownAdmin">
    <div class="container">
        <h1>@ViewData["Title"]</h1>
    </div>
</div>

<div>
    <div class="container">
        <form action="" method="POST">
            <div class="mb-3">
                <label for="heading" class="form-label">Heading</label>
                <input type="text" class="form-control" id="heading" asp-for="AddBlogPostReq.Heading">
            </div>
            <div class="mb-3">
                <label for="pageTitle" class="form-label">Page Title</label>
                <input type="text" class="form-control" id="pageTitle" asp-for="AddBlogPostReq.PageTitle">
            </div>
            <div class="mb-3">
                <label for="content" class="form-label">Content</label>
                <textarea class="form-control" id="content" asp-for="AddBlogPostReq.Content"></textarea>
            </div>
            <div class="mb-3">
                <label for="shortDescription" class="form-label">Short Description</label>
                <input type="text" class="form-control" id="shortDescription" asp-for="AddBlogPostReq.ShortDescription">
            </div>
            <div class="mb-3">
                <label for="featuredImage" class="form-label">Featured Image</label>
                <input type="text" class="form-control" id="featuredImage" asp-for="AddBlogPostReq.FeaturedImageUrl">
            </div>
            <div class="mb-3">
                <label for="urlHandle" class="form-label">URL Handle</label>
                <input type="text" class="form-control" id="urlHandle" asp-for="AddBlogPostReq.UrlHandle">
            </div>
            <div class="mb-3">
                <label for="publishDate" class="form-label">Publish Date</label>
                <input type="date" class="form-control" id="publishDate" asp-for="AddBlogPostReq.PublishedDate">
            </div>
            <div class="mb-3">
                <label for="author" class="form-label">Author</label>
                <input type="text" class="form-control" id="author" asp-for="AddBlogPostReq.Author">
            </div>
            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" value="" id="isVisible" asp-for="AddBlogPostReq.Visible">
                <label class="form-check-label" for="isVisible">
                    Is Visible
                </label>
            </div>
            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Submit</button>
            </div>
        </form>
    </div>
</div>
