@page
@model RazorBlog.Pages.Admin.Blogs.Add
@{
    ViewData["Title"] = "Add Blog Post";
}



<div class="bg-secondary bg-opacity-10 py-2 mb-5" aria-labelledby="navbarDropdownAdmin">
    <div class="container">
        <h1>@ViewData["Title"]</h1>
    </div>
</div>

<div>
    <div class="container">
        <form action="" method="post">
            <div class="mb-3">
                <label for="heading" class="form-label">Heading</label>
                <input type="text" class="form-control" id="heading">
            </div>
            <div class="mb-3">
                <label for="pageTitle" class="form-label">Page Title</label>
                <input type="text" class="form-control" id="pageTitle">
            </div>
            <div class="mb-3">
                <label for="content" class="form-label">Content</label>
                <textarea class="form-control" id="content"></textarea>
            </div>
            <div class="mb-3">
                <label for="shortDescription" class="form-label">Short Description</label>
                <input type="text" class="form-control" id="shortDescription">
            </div>
            <div class="mb-3">
                <label for="featuredImage" class="form-label">Featured Image</label>
                <input type="text" class="form-control" id="featuredImage">
            </div>
            <div class="mb-3">
                <label for="urlHandle" class="form-label">URL Handle</label>
                <input type="text" class="form-control" id="urlHandle">
            </div>
            <div class="mb-3">
                <label for="publishDate" class="form-label">Publish Date</label>
                <input type="date" class="form-control" id="publishDate">
            </div>
            <div class="mb-3">
                <label for="author" class="form-label">Author</label>
                <input type="date" class="form-control" id="author">
            </div>
            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" value="" id="isVisible">
                <label class="form-check-label" for="isVisible">
                    Is Visible
                </label>
            </div>
            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Submit</button>
            </div>
        </form>
    </div>
</div>
